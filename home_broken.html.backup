    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('sesionForm');
            const loadingModal = document.getElementById('loadingModal');
            const successModal = document.getElementById('successModal');
            const errorMessage = document.getElementById('errorMessage');
            const resultsSection = document.getElementById('resultsSection');
            const btnGenerate = document.getElementById('btnGenerate');
            const btnNewClass = document.getElementById('btnNewClass');
            const btnDownloadModal = document.getElementById('btnDownloadModal');

            const nivelSelect = document.getElementById('nivel');
            const gradoSelect = document.getElementById('grado');

            const camposTexto = document.querySelectorAll('input[type="text"][name]:not(#tema, #tiempo)');
            const camposDinamicos = document.querySelectorAll('#tema, #nivel, #grado, #area');
            const infoButtons = document.querySelectorAll('.info-icon');

            const suggestionCache = {};

            const infoMessages = {
                'competencia': "Aqu√≠ debe ir la Competencia principal de la sesi√≥n. Es el objetivo macro de la clase. Presiona este cuadro para ver las sugerencias de la IA.",
                'capacidad': "Las Capacidades son los recursos que el estudiante utiliza para actuar de forma competente. Deben ser coherentes con la Competencia. Presiona este cuadro para ver las sugerencias.",
                'desempe√±o': "El Desempe√±o es la descripci√≥n observable de lo que har√° el estudiante. Se usa para evaluar el logro. Presiona este cuadro para ver las sugerencias.",
                'competencia transversal': "Selecciona la Competencia Transversal que se potenciar√° con el uso de recursos digitales (TIC) o con la gesti√≥n del aprendizaje aut√≥nomo. Presiona este cuadro para ver las sugerencias.",
                'capacidad transversal': "Define la Capacidad Transversal espec√≠fica de la competencia transversal que se potenciar√°. Presiona este cuadro para ver las sugerencias.",
                'enfoque transversal': "El Enfoque Transversal es la orientaci√≥n √©tica de la sesi√≥n. Debe guiar la pr√°ctica docente. Presiona este cuadro para ver las sugerencias.",
                'valor': "Los Valores refuerzan el Enfoque Transversal elegido, mostrando la actitud deseada. Presiona este cuadro para ver las sugerencias."
            };

            // Funci√≥n para resetear el formulario
            function resetForm() {
                form.reset();
                camposTexto.forEach(campo => campo.value = '');
                Object.keys(suggestionCache).forEach(key => delete suggestionCache[key]);
                hideAllSuggestionBoxes();
                resultsSection.classList.remove('active');
                document.getElementById('btnDownload').style.display = 'none';
                document.getElementById('tema').value = 'PARTES DEL CUERPO';
            }

            // Bot√≥n generar nueva clase
            btnNewClass.addEventListener('click', () => {
                successModal.classList.remove('active');
                resetForm();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });

            // Bot√≥n descargar en modal
            btnDownloadModal.addEventListener('click', () => {
                successModal.classList.remove('active');
                document.getElementById('btnDownload').click();
            });

            function resetCamposDinamicos() {
                camposTexto.forEach(campo => {
                    campo.value = '';
                });
                Object.keys(suggestionCache).forEach(key => delete suggestionCache[key]);
                hideAllSuggestionBoxes();
            }

            function updateGradoOptions() {
                gradoSelect.innerHTML = '<option value="" disabled selected>Elige el grado...</option>';
                const nivel = nivelSelect.value;
                let opciones = [];

                if (nivel === 'Inicial') {
                    opciones = [
                        { value: '0-2 a√±os', text: '0 a 2 a√±os' },
                        { value: '3-5 a√±os', text: '3 a 5 a√±os' }
                    ];
                } else if (nivel === 'Primaria') {
                    opciones = [
                        { value: '1¬∞', text: 'Primero' },
                        { value: '2¬∞', text: 'Segundo' },
                        { value: '3¬∞', text: 'Tercero' },
                        { value: '4¬∞', text: 'Cuarto' },
                        { value: '5¬∞', text: 'Quinto' },
                        { value: '6¬∞', text: 'Sexto' }
                    ];
                } else if (nivel === 'Secundaria') {
                    opciones = [
                        { value: '1¬∞', text: 'Primero' },
                        { value: '2¬∞', text: 'Segundo' },
                        { value: '3¬∞', text: 'Tercero' },
                        { value: '4¬∞', text: 'Cuarto' },
                        { value: '5¬∞', text: 'Quinto' }
                    ];
                }

                opciones.forEach(opt => {
                    const option = document.createElement('option');
                    option.value = opt.value;
                    option.textContent = opt.text;
                    gradoSelect.appendChild(option);
                });
            }

            camposDinamicos.forEach(campo => {
                campo.addEventListener('change', resetCamposDinamicos);
            });
            document.getElementById('tema').addEventListener('input', resetCamposDinamicos);
            nivelSelect.addEventListener('change', updateGradoOptions);
            updateGradoOptions();

            function hideAllSuggestionBoxes() {
                document.querySelectorAll('.suggestion-box').forEach(box => {
                    box.classList.remove('active');
                    box.classList.remove('list');
                    box.classList.remove('info');
                });
            }

            infoButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    e.preventDefault();
                    e.stopPropagation();

                    const campo = button.dataset.campo;
                    const targetId = button.dataset.targetId;
                    const suggestionBox = document.querySelector(`.suggestion-box[data-target="${targetId}"]`);

                    if (suggestionBox.classList.contains('active') && suggestionBox.classList.contains('info')) {
                        hideAllSuggestionBoxes();
                        return;
                    }

                    hideAllSuggestionBoxes();

                    suggestionBox.innerHTML = `
                <div class="info">
                    <h4>‚ÑπÔ∏è AMAWTA esta recomendaci√≥n es para ${campo.toUpperCase()}</h4>
                    <p>${infoMessages[campo]}</p>
                    <small style="color: #666;">Haz clic en el cuadro de selecci√≥n para cargar las opciones sugeridas.</small>
                </div>
            `;
                    suggestionBox.classList.add('active');
                    suggestionBox.classList.add('info');
                });
            });

            camposTexto.forEach(input => {
                input.addEventListener('click', async (e) => {
                    e.stopPropagation();
                    const targetId = e.target.id;
                    const campo = e.target.closest('.form-group').querySelector('.info-icon').dataset.campo;
                    const suggestionBox = document.querySelector(`.suggestion-box[data-target="${targetId}"]`);

                    if (suggestionBox.classList.contains('active') && suggestionBox.classList.contains('list')) {
                        hideAllSuggestionBoxes();
                        return;
                    }

                    hideAllSuggestionBoxes();
                    suggestionBox.classList.add('active');

                    if (suggestionCache[targetId]) {
                        displaySuggestions(suggestionBox, targetId, suggestionCache[targetId], campo);
                        return;
                    }

                    suggestionBox.innerHTML = '<div class="suggestion-loading">Cargando sugerencias de la IA...</div>';

                    const datosBase = {
                        tema: document.getElementById('tema').value,
                        nivel: nivelSelect.value,
                        grado: gradoSelect.value,
                        area: document.getElementById('area').value,
                        campo: campo
                    };

                    if (!datosBase.tema || !datosBase.nivel || !datosBase.grado || !datosBase.area) {
                        suggestionBox.innerHTML = '<div style="color:red; padding: 10px;">Completar campos b√°sicos antes de solicitar sugerencias.</div>';
                        return;
                    }

                    input.disabled = true;

                    try {
                        const payload = { ...datosBase };
                        if (campo !== 'desempe√±o') {
                            payload.format = 'short';
                        }

                        const resp = await fetch('/suggest', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload)
                        });

                        if (!resp.ok) {
                            const errorJson = await resp.json();
                            throw new Error(errorJson.error || `Error en el servidor: ${resp.statusText}`);
                        }

                        const json = await resp.json();

                        if (json.error) throw new Error(json.error);

                        suggestionCache[targetId] = json.sugerencias;
                        displaySuggestions(suggestionBox, targetId, json.sugerencias, campo);

                    } catch (err) {
                        suggestionBox.innerHTML = `<div style="color:red; font-style: normal; padding: 10px;">‚ùå Error: ${err.message}. Revise datos base y clave API.</div>`;
                        console.error('Error fetch /suggest:', err);
                    } finally {
                        input.disabled = false;
                    }
                });
            });

            function displaySuggestions(box, targetId, sugerencias, campo) {
                box.innerHTML = '';
                box.classList.remove('info');
                box.classList.add('list');

                if (sugerencias.length === 0) {
                    box.innerHTML = '<div style="padding: 10px;">No se encontraron sugerencias. Intente cambiando el tema.</div>';
                    return;
                }

                sugerencias.forEach(sugerencia => {
                    const item = document.createElement('div');
                    item.className = 'suggestion-item';

                    let textoVisible = sugerencia;

                    if (campo !== 'desempe√±o') {
                        let index = -1;
                        const suggestionLower = sugerencia.toLowerCase();

                        const keywords = [':', '.', ',', ' en la b√∫squeda', ' al definir', ' al organizar', ' de manera aut√≥noma', ' durante el proceso', ' o de atenci√≥n'];

                        for (const keyword of keywords) {
                            const current_index = suggestionLower.indexOf(keyword);
                            if (current_index > 10 && (index === -1 || current_index < index)) {
                                index = current_index;
                            }
                        }

                        if (index !== -1) {
                            textoVisible = sugerencia.substring(0, index).trim();
                        } else if (sugerencia.length > 60) {
                            textoVisible = sugerencia.substring(0, 60).trim() + '...';
                        }

                        if (!textoVisible.endsWith('...')) {
                            while (textoVisible.endsWith('.') || textoVisible.endsWith(':') || textoVisible.endsWith(',')) {
                                textoVisible = textoVisible.slice(0, -1);
                            }
                        }

                    }

                    item.textContent = textoVisible;
                    item.dataset.fullValue = sugerencia;

                    item.addEventListener('click', (e) => {
                        e.stopPropagation();
                        const input = document.getElementById(targetId);
                        const valorFinal = item.dataset.fullValue;

                        if (campo === 'desempe√±o') {
                            if (input.value.trim() === "") {
                                input.value = valorFinal;
                            } else if (!input.value.includes(valorFinal)) {
                                input.value += "\n\n" + valorFinal;
                            }
                        } else {
                            input.value = valorFinal;
                            hideAllSuggestionBoxes();
                        }
                    });
                    box.appendChild(item);
                });
            }

            document.addEventListener('click', (e) => {
                if (!e.target.closest('.form-group') && !e.target.matches('.suggestion-item')) {
                    hideAllSuggestionBoxes();
                }
            });

            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                errorMessage.style.display = 'none';
                resultsSection.classList.remove('active');
                loadingModal.classList.add('active');
                btnGenerate.disabled = true;

                hideAllSuggestionBoxes();

                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());

                try {
                    const resp = await fetch('/generate', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });

                    if (!resp.ok) {
                        const texto = await resp.text();
                        throw new Error(`Servidor ${resp.status}: ${texto || resp.statusText}`);
                    }

                    const json = await resp.json();
                    if (json.error) throw new Error(json.error);

                    displaySesion(json.sesion, data);

                    loadingModal.classList.remove('active');

                    document.getElementById('modalTopic').textContent = data.tema;
                    successModal.classList.add('active');

                    resultsSection.classList.add('active');

                } catch (err) {
                    loadingModal.classList.remove('active');
                    errorMessage.textContent = '‚ùå Error al generar la sesi√≥n: ' + err.message;
                    errorMessage.style.display = 'block';
                    console.error('Error fetch /generate:', err);
                } finally {
                    btnGenerate.disabled = false;
                }
            });

            function displaySesion(sesion, datosFormulario) {
                const sesionContent = document.getElementById('sesionContent');
                const btnDownload = document.getElementById('btnDownload');
                sesionContent.innerHTML = '';

                const tiempo = datosFormulario.tiempo || 90;
                const inicioMin = Math.round(tiempo * 0.2);
                const desarrolloMin = Math.round(tiempo * 0.6);
                const cierreMin = Math.round(tiempo * 0.2);

                const header = document.createElement('div');
                header.className = 'sesion-header';
                header.innerHTML = `<h2>${sesion.titulo_sesion || 'Sesi√≥n generada'}</h2>`;
                sesionContent.appendChild(header);

                const tablaProposito = document.createElement('table');
                tablaProposito.className = 'sesion-table';
                tablaProposito.innerHTML = `
            <tr style="background: #3498db; color: white;"><th colspan="2">Prop√≥sito y Evidencia</th></tr>
            <tr><th>Prop√≥sito de Aprendizaje</th><td>${sesion.proposito || 'N/A'}</td></tr>
            <tr><th>Evidencia de Aprendizaje</th><td>${sesion.evidencia || 'N/A'}</td></tr>
        `;
                sesionContent.appendChild(tablaProposito);

                const tablaDetalles = document.createElement('table');
                tablaDetalles.className = 'sesion-table';
                tablaDetalles.innerHTML = `
            <tr style="background: #e67e22; color: white;"><th colspan="2">Marcos Transversales y Criterios</th></tr>
            <tr><th>Comp. Transversal</th><td>${datosFormulario.comp_transversal || 'N/A'}</td></tr>
            <tr><th>Cap. Transversal</th><td>${datosFormulario.cap_transversal || 'N/A'}</td></tr>
            <tr><th>Enfoque Transversal</th><td>${datosFormulario.enfoque || 'N/A'}</td></tr>
            <tr><th>Valor Asociado</th><td>${datosFormulario.valor || 'N/A'}</td></tr>
            <tr><th>Tiempo Total</th><td>${tiempo} minutos</td></tr>

            <tr style="background: #27ae60; color: white;"><th colspan="2">Criterios de Evaluaci√≥n</th></tr>
            <tr>
                <td colspan="2">
                    ${(sesion.criterios_evaluacion || []).map(c => `<div style="padding: 5px 0; padding-left: 10px; border-left: 3px solid #27ae60; margin: 5px 0;">‚Ä¢ ${c}</div>`).join('')}
                </td>
            </tr>
        `;
                sesionContent.appendChild(tablaDetalles);

                const tablaSecuencia = document.createElement('table');
                tablaSecuencia.className = 'sesion-table';
                tablaSecuencia.innerHTML = `
            <tr style="background: #e74c3c; color: white;"><th style="width: 25%;">Momento</th><th>Secuencia Did√°ctica</th></tr>
            <tr><th>INICIO (${inicioMin} min)</th><td>${(sesion.secuencia_didactica || {}).inicio || ''}</td></tr>
            <tr><th>DESARROLLO (${desarrolloMin} min)</th><td>${(sesion.secuencia_didactica || {}).desarrollo || ''}</td></tr>
            <tr><th>CIERRE (${cierreMin} min)</th><td>${(sesion.secuencia_didactica || {}).cierre || ''}</td></tr>
        `;
                sesionContent.appendChild(tablaSecuencia);

                btnDownload.style.display = 'inline-block';
            }

            document.getElementById('btnDownload').addEventListener('click', async () => {
                try {
                    const resp = await fetch('/download');
                    if (!resp.ok) {
                        const txt = await resp.text();
                        throw new Error(`Error al descargar: ${resp.status} ${txt}`);
                    }
                    const blob = await resp.blob();
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'sesion_aprendizaje.docx';
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    URL.revokeObjectURL(url);
                } catch (err) {
                    alert('Error al descargar: ' + err.message);
                    console.error('Error download:', err);
                }
            });
        });
    </script>
</body>

